<div class="container">
  <div class="row">
    <div class="col-12 mt-3 text-center">
      <h1>Editar amostra {{sample.data.point}}</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-4"></div>
    <div class="col-4">
      <form action="/sample/edit" method="post">
        <input type="hidden" name="id" value="{{sample.id}}" />
        <div class="mb-3">
          <label for="name" class="form-label">Nome</label>
          <input
            type="text"
            class="form-control"
            name="name"
            value="{{sample.data.point}}"
          />
        </div>
        <div class="mb-3">
          <label for="date" class="form-label">Data de coleta</label>
          <input
            type="date"
            class="form-control"
            name="date"
            value="{{sample.data.date}}"
          />
        </div>
        <button type="submit" class="btn btn-primary mb-3">Editar</button>
      </form>
    </div>
    <div class="col-4"></div>
  </div>
</div>