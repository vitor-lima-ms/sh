<div class="container">
    <div class="row mt-3 mb-3 text-center">
        <h1>Adicionar parâmetro</h1>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form action="/parameter/create" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Nome</label>
                    <input class="form-control" type="text" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="minValue" class="form-label">Valor mínimo</label>
                    <input class="form-control" type="text" name="minValue">
                </div>
                <div class="mb-3">
                    <label for="maxValue" class="form-label">Valor máximo</label>
                    <input class="form-control" type="text" name="maxValue">
                </div>
                <div class="mb-3">
                    <label for="unit" class="form-label">Unidade</label>
                    <input class="form-control" type="text" name="unit" required>
                </div>
                <button class="btn btn-primary" type="submit">Adicionar</button>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>